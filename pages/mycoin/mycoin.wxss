/**mycoin.wxss**/

.msgwrap{
	position: relative;
	width: 670rpx;
	margin: 0 auto 40rpx;
}
.topmsg{
	width: 100%;
	height: 48rpx;
	line-height: 48rpx;
	padding: 41rpx 0;
	border-bottom: 1rpx solid #eeeeee;
}
.topmsg .topmsg-left{
	height: 48rpx;
	-webkit-box-flex: 7;
  -webkit-flex: 7;
  flex: 7;
  text-align: left;
	font-weight: bold;
	font-size: 40rpx;
}
.mycointext{
	display: inline-block;
	color: #4a4a4a;
}
.mycoinnum{
	display: inline-block;
	padding-left: 40rpx;
	color: #0080ff;
}
.topmsg .topmsg-right{
	height: 48rpx;
	-webkit-box-flex: 4;
  -webkit-flex: 4;
  flex: 4;
  text-align: right;
	font-size: 34rpx;
}
.mycard,.mycash{
	display: inline-block;
	height: 48rpx;
	padding: 0 12rpx;
	color: #4a4a4a;
	border: 1rpx solid #9b9b9b;
	border-radius: 24rpx;
}
.mycash{
	margin-left: 16rpx;
}
.coinmsgwrap{
	width: 100%;
	height: 130rpx;
	line-height: 130rpx;
	margin-top: 40rpx;
	border-bottom: 1rpx solid #eeeeee;
	font-weight: bold;
	font-size: 40rpx;
	color: #4a4a4a;
}
.cashwrap{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	font-size: 30rpx;
	border-bottom: 1rpx solid #eeeeee;
}
.action{
	height: 120rpx;
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
	color: #4a4a4a;
}
.cashfrom{
	height: 120rpx;
	-webkit-box-flex: 4;
  -webkit-flex: 4;
  flex: 4;
  text-align: left;
	color: #4a4a4a;
}
.cashchange{
	height: 120rpx;
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
}
.cashchange.increase{
	color: #00c353;
}
.cashchange.decrease{
	color: #ff5252;
}