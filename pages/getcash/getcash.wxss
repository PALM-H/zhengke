/**getcash.wxss**/

.msgwrap{
	position: relative;
	width: 670rpx;
	margin: 40rpx;
}
.title{
	display: block;
	font-size: 40rpx;
	font-weight: bold;
	color: #4a4a4a;
	margin-bottom: 40rpx;
}
.cashtitle{
	margin-top: 90rpx;
}
.ip-cash{
	width: 100%;
	height: 90rpx;
	border: 1rpx solid #9b9b9b;
	border-radius: 10rpx;
	padding-left: 40rpx;
	box-sizing: border-box; 
	font-size: 30rpx;
}
.tipswrap{
	width: 100%;
	margin-top: 20rpx;
}
.tipswrap .tips{
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
	color: #9b9b9b;
	font-size: 30rpx;
}
.tipswrap .bluetips{
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
	color: #0080ff;
	font-size: 30rpx;
}
.cardwrap{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	border-top: 1rpx solid #eeeeee;
	border-bottom: 1rpx solid #eeeeee;
}
.type{
	width: 100%;
	-webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
	font-size: 30rpx;
	font-weight: bold;
	color: #4a4a4a;
}
.writeinput{
	width: 100%;
	-webkit-box-flex: 5;
  -webkit-flex: 5;
  flex: 5;
	height: 120rpx;
}
.writeinput picker{
	width: 100%;
	height: 90rpx;
	border-radius: 10rpx;
	padding-left: 40rpx;
	box-sizing: border-box; 
	font-size: 30rpx;
	color: #0080ff;
}

.btnwrap{
	width: 100%;
	margin-top: 40rpx;
	height: 90rpx;
}
.submit{
	height: 90rpx;
	font-size: 34rpx;
	background: #9b9b9b;
	color: #ffffff;
}

.black-shade{
	position: fixed;
	width: 100%;
	height: 100%;
	top:0;
	background: #000000;
	opacity: 0.4;
	z-index: 3;
}

.success{
  position: fixed;
  width: 540rpx;
  left: 50%;
  top: 50%;
  border-radius: 20rpx;
  padding: 64rpx 0;
  background: #ffffff;
  transform: translate(-50%,-50%);
  z-index: 4;
}
.success .successwrap{
  position: relative;
  width: 100%;
}
.successwrap .sign{
  width: 100%;
  text-align: center;
}
.successwrap .sign image{
  width: 100rpx;
  height: 100rpx;
}
.successwrap .successtext{
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
}
.successwrap .successtext text{
  font-size: 30rpx;
  color: #4a4a4a;
}