/**mycard.wxss**/

.cardlist{
	position: relative;
	width: 670rpx;
	margin: 40rpx auto 140rpx;
}
.cardwrap{
	position: relative;
	width: 100%;
	height: 237rpx;
	border-radius: 15rpx;
	margin-bottom: 40rpx;
	background: linear-gradient(to right, #0d88ff , #00b4ff);
}
.cardicon{
	position: absolute;
	left: 40rpx;
	top: 40rpx;
	width: 58rpx;
	height: 43rpx;
}
.closeicon{
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	width: 30rpx;
	height: 30rpx;
}
.bankname{
	position: absolute;
	left: 126rpx;
	top: 38rpx;
	font-size: 35rpx;
	font-weight: bold;
	color: #ffffff;
}
.cardtype{
	position: absolute;
	left: 126rpx;
	top: 86rpx;
	font-size: 30rpx;
	color: #ffffff;
}
.cardnum{
	position: absolute;
	left: 126rpx;
	top: 156rpx;
	font-size: 30rpx;
	color: #ffffff;
}
.btnwrap{
	position: fixed;
	z-index: 2;
	width: 100%;
	height: 130rpx;
	background: #ffffff;
	padding: 20rpx 40rpx;
	box-sizing: border-box;
	border-top: 1rpx solid #eeeeee;
	left: 0;
	bottom: 0;
}
.submit{
	font-size: 34rpx;
	background: #9b9b9b;
	color: #ffffff;
}

.black-shade{
	position: fixed;
	width: 100%;
	height: 100%;
	top:0;
	background: #000000;
	opacity: 0.4;
	z-index: 3;
}

.confirm{
  position: fixed;
  width: 540rpx;
  left: 50%;
  top: 50%;
  border-radius: 20rpx;
  background: #ffffff;
  transform: translate(-50%,-50%);
  z-index: 4;
}
.confirm .confirmwrap{
  position: relative;
  width: 100%;
}
.confirmwrap .confirm-tips{
  width: 100%;
  margin-top: 65rpx;
  text-align: center;
	color: #4a4a4a;
  font-weight: bold;
}
.select{
  width: 100%;
  margin-top: 65rpx;
  border-top: 1rpx solid #eeeeee;
}
.select .no,.select .yes{
  height: 100rpx;
  line-height: 100rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
}
.select .no text,.select .yes text{
  font-size: 34rpx;
  font-weight: bold;
  color: #0080ff;
}
.select .yes{
  border-left: 1rpx solid #eeeeee;
}

.success{
  position: fixed;
  width: 540rpx;
  left: 50%;
  top: 50%;
  border-radius: 20rpx;
  padding: 64rpx 0;
  background: #ffffff;
  transform: translate(-50%,-50%);
  z-index: 4;
}
.success .successwrap{
  position: relative;
  width: 100%;
}
.successwrap .sign{
  width: 100%;
  text-align: center;
}
.successwrap .sign image{
  width: 100rpx;
  height: 100rpx;
}
.successwrap .successtext{
  width: 100%;
  margin-top: 20rpx;
  text-align: center;
}
.successwrap .successtext text{
  font-size: 30rpx;
  color: #4a4a4a;
}