/**addcard.wxss**/

.msgwrap{
	position: relative;
	width: 670rpx;
	margin: 40rpx;
}
.title{
	display: block;
	font-size: 40rpx;
	font-weight: bold;
	color: #4a4a4a;
	margin-bottom: 40rpx;
}
.flexwrap{
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	margin-bottom: 40rpx;
}
.type{
	width: 100%;
	-webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
  text-align: left;
	font-size: 30rpx;
	font-weight: bold;
	color: #4a4a4a;
}
.writeinput{
	width: 100%;
	-webkit-box-flex: 5;
  -webkit-flex: 5;
  flex: 5;
	height: 90rpx;
}
.writeinput input,.writeinput picker{
	width: 100%;
	height: 90rpx;
	border: 1rpx solid #9b9b9b;
	border-radius: 10rpx;
	padding-left: 40rpx;
	box-sizing: border-box; 
	font-size: 30rpx;
}

.btnwrap{
	position: fixed;
	z-index: 2;
	width: 100%;
	height: 130rpx;
	background: #ffffff;
	padding: 20rpx 40rpx;
	box-sizing: border-box;
	border-top: 1rpx solid #eeeeee;
	left: 0;
	bottom: 0;
}
.submit{
	font-size: 34rpx;
	background: #9b9b9b;
	color: #ffffff;
}