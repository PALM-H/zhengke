/**checkmsg.wxss**/

.msgwrap{
	position: relative;
	width: 670rpx;
	margin: 40rpx auto;
}
.signwrap{
	position: relative;
	width: 100%;
	margin-top: 40rpx;
	border-radius: 10rpx;
	background: #ffffff;
	box-shadow: 0 0 30rpx #dee3f2;
}
.signwrap image{
	position: absolute;
	width: 44rpx;
	height: 44rpx;
	left: 40rpx;
	top: 56rpx;
}
.signwrap .price{
	position: absolute;
	font-size: 48rpx;
	color: #4a4a4a;
	left: 100rpx;
	top: 44rpx;
}
.signwrap .state{
	display: block;
	font-size: 30rpx;
	color: #0080ff;
	padding-left: 40rpx;
	padding-top: 130rpx;
	padding-bottom: 40rpx;
}
.youbuymsgtext{
	display: block;
	margin-top: 80rpx;
	padding-bottom: 40rpx;
	font-size: 34rpx;
	color: #4a4a4a;
	border-bottom: 1rpx solid #eeeeee;
}
.msgwrap .flexwrap{
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	font-size: 30rpx;
	color: #4a4a4a;
	border-bottom: 1rpx solid #eeeeee;
}
.msgwrap .flexwrap .type{
	height: 120rpx;
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
  text-align: left;
}
.msgwrap .flexwrap .msg{
	height: 120rpx;
  -webkit-box-flex: 5;
  -webkit-flex: 5;
  flex: 5;
  text-align: left;
	font-weight: bold;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.previewwrap{
	width: 100%
}
.preview{
	width: 100%;
	border-radius: 10rpx;
}

.submit{
	margin-top: 40rpx;
	width: 100%;
	height: 94rpx;
	line-height: 94rpx;
	text-align:center;
	border-radius: 8rpx;
	background: #ffffff;
	color: #4a4a4a;
	font-weight: bold;
}

.black-shade{
	position: fixed;
	width: 100%;
	height: 100%;
	top:0;
	background: #000000;
	opacity: 0.4;
	z-index: 2;
}

.confirm{
  position: fixed;
  width: 540rpx;
  left: 50%;
  top: 50%;
  border-radius: 20rpx;
  background: #ffffff;
  transform: translate(-50%,-50%);
  z-index: 4;
}
.confirm .confirmwrap{
  position: relative;
  width: 100%;
}
.confirmwrap .confirm-tips{
  width: 100%;
  margin-top: 65rpx;
  text-align: center;
	color: #4a4a4a;
  font-weight: bold;
}
.select{
  width: 100%;
  margin-top: 65rpx;
  border-top: 1rpx solid #eeeeee;
}
.select .no,.select .yes{
  height: 100rpx;
  line-height: 100rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  -webkit-tap-highlight-color: transparent;
}
.select .no text,.select .yes text{
  font-size: 34rpx;
  font-weight: bold;
  color: #0080ff;
}
.select .yes{
  border-left: 1rpx solid #eeeeee;
}